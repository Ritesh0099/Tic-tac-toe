<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ritesh.tictactoe">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ritesh"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ritesh"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tictactoe"
        tools:targetApi="31">

        <!-- Player Setup is now the launcher activity -->
        <activity
            android:name=".PlayerSetupActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity no longer needs launcher intent -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>
